<IfModule mod_expires.c>
  ExpiresActive On

  # 1. NASTAVENÍ PRO JS A CSS (Vyřeší hlášku 1h -> 1 rok)
  <FilesMatch "\.(js|css)$">
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # 2. NASTAVENÍ PRO OBRÁZKY A IKONY
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|ico|woff2)$">
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>

  # 3. HTML NESMÍ BÝT CACHOVÁNO (Aby se projevily změny webu)
  ExpiresByType text/html "access plus 0 seconds"
  Header set Cache-Control "no-store, no-cache, must-revalidate"
</IfModule>

# 4. ZAPNUTÍ KOMPRESE (Zmenší těch 163 KiB na cca 40 KiB)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript
</IfModule>
